<h1>Employees</h1>


  <div id="employees">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Manager</th>
        </tr>
      </thead>
      <tbody>
        <employee-row
          v-for="(employee, index) in employees"
          :key="employee.id"
          :employee="employee"
          v-on:fire-employee="fireEmployee">
        </employee-row>
        <new-employee
          :key="new_employee"
          :employee="new_employee"
          :errors="errors"
          v-on:hire-employee="hireEmployee">
        </new-employee>
      </tbody>
    </table>
  </div>


<!-- Components templates -->
<%= render 'templates/employee_row' %>
<%= render 'templates/new_employee' %>

<!-- Components js -->
<% content_for(:after_js) do %>
  <%= javascript_pack_tag 'employee_management' %>
<% end %>


